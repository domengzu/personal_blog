<div class="mt-8">
    <h2 class="text-xl md:text-2xl font-bold mb-4">Comments</h2>

    <!-- Comment List -->
    <div class="space-y-4">
        <% @post.comments.each do |comment| %>
        <div class="bg-gray-50 border border-gray-200 rounded-lg p-3 shadow-sm hover:shadow-md transition duration-200">
            <p class="text-sm  mb-1">
                <strong><%= comment.user.email %>:</strong>
            </p>
            <p class="mb-2"><%= comment.body %></p>
            <% if comment.user == current_user %>
            <%= link_to "Edit", edit_post_comment_path(@post, comment), class: "text-blue-500 text-xs hover:underline transition duration-150" %>
            <%= link_to "Delete", 
                post_comment_path(@post, comment),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this comment?" },
                class: "text-red-500 text-xs hover:underline transition duration-150"
          %>
            <% end %>
        </div>
        <% end %>
    </div>

    <!-- Comment Form -->
    <% if user_signed_in? %>
    <div class="mt-6">
        <%= form_with model: [@post, Comment.new], class: "flex flex-col gap-2" do |f| %>
        <%= f.text_area :body,
            placeholder: "Add a comment...",
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition duration-200" %>

        <%= f.submit "Post Comment",
            class: "w-32 bg-blue-600 hover:bg-blue-700 text-white text-sm px-4 py-2 rounded-lg shadow-md transition duration-200 self-end cursor-pointer" %>
        <% end %>
    </div>
    <% end %>
</div>