<div class="mt-8">
    <h2 class="text-xl md:text-2xl font-bold">Comments</h2>
    <!-- Comment Form -->
    <% if user_signed_in? %>
    <div class="mt-2">
        <%= form_with model: [@post, comment], class: "flex flex-col gap-2" do |f| %>
        <%= f.text_area :body,
            placeholder: "Add a comment...",
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition duration-200 text-sm" %>

        <%= f.submit "Update Comment",
            class: "btn btn-success btn-sm self-end" %>
        <% end %>
    </div>
    <% end %>
</div>