<div class="min-h-screen bg-gray-100 p-12 pt-8 lg:px-16">
    <div class="flex justify-between items-center mb-8">
        <div class="flex items-center space-x-4 w-[22%]">
            <h1 class="text-lg md:text-4xl lg:text-2xl font-bold text-gray-800 m-4 typewriter">
                BLOG POSTS
            </h1>
        </div>
        <div>
            <% if admin? %>
            <%= link_to "New post", new_post_path, 
            class: "p-3 border border-blue-700 text-blue-700 rounded-lg hover:bg-blue-700 hover:text-white transition-colors duration-300 text-sm" %>
            <% end %>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 justify-items-center">
        <%= render partial: "post", collection: @posts %>
    </div>
</div>