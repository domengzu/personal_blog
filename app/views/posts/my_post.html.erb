<% if admin? %>
<div class="min-h-screen py-12 px-4">

    <!-- Page Title -->
    <div class="max-w-3xl mx-auto mb-10 text-center">
        <h1 class="text-3xl md:text-4xl font-extrabold mb-2">
            My Posts
        </h1>
        <p class="text-sm">
            Manage and revisit your published content ✍️
        </p>
    </div>

    <div class="max-w-3xl mx-auto">
        <% if @posts.any? %>

        <div class="space-y-4">
            <% @posts.each do |post| %>
            <div class="rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 p-5 flex justify-between items-center group">

                <!-- Post Info -->
                <div>
                    <%= link_to post.title, post_path(post),
                    class: "text-lg font-semibold group-hover:text-blue-600 transition duration-200" %>

                    <p class="text-sm mt-1 italic">
                        <%= post.created_at.strftime("%B %d, %Y") %>
                    </p>
                </div>

                <!-- Quick Action -->
                <%= link_to "View",
                    post_path(post),
                    class: "btn btn-info btn-sm w-[10%]" %>
            </div>
            <% end %>
        </div>

        <% else %>

        <!-- Empty State -->
        <div class="rounded-xl p-10 text-center shadow-xl">
            <p class="mb-4">
                You haven’t created any posts yet.
            </p>
            <%= link_to "Create Your First Post",
                new_post_path,
                class: "btn btn-primary btn-outline" %>
        </div>

        <% end %>
    </div>
</div>
<% end %>