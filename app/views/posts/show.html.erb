<div class="blog-post">
    <div class="post-header">
        <h1><%= @post.title %></h1>
        <p><%= @post.body %></p>
        <p class="author">Author: <%= @post.user.email %></p>
        <p class="post-date">
            <%= @post.user.created_at %>
        </p>
    </div>

    <div class=" post-actions">
        <%= link_to "Back to posts", posts_path, class: "btn btn-primary" %>
        <% if user_signed_in? && current_user == @post.user %>
        <%= link_to "Edit", edit_post_path(@post), class: "btn btn-secondary" %>
        <%= link_to "Delete", @post, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this post?" }, class: "btn btn-danger" %>

        <% end %>
    </div>
    <div>
        <%= render "comments/form" %>
    </div>
    <div>
        <%= render "posts/reactions", post: @post %>
    </div>
</div>