<div class="w-full max-w-2xl mx-auto mt-4 p-8 md:p-12 shadow-2xl rounded-xl animate-fade-in">
    <!-- Post Header -->
    <div class="mb-8 text-center">
        <h1 class="text-3xl md:text-4xl font-extrabold mb-2">
            <%= @post.title %>
        </h1>
        <span class="text-sm italic block">
            Posted by <%= @post.user.username %> (<%= @post.user.email %>)
        </span>
        <span class="text-xs md:block italic mt-1">
            Published on <%= @post.created_at.strftime("%B %d, %Y %H:%M") %>
        </span>
    </div>

    <!-- Post Image -->
    <% if @post.image.attached? %>
    <div class="mb-8">
        <%= image_tag @post.image.variant(resize_to_limit: [1200, 800]), class: "w-full h-75 rounded-lg shadow-md object-cover" %>
    </div>
    <% end %>

    <!-- Post Body -->
    <div class="mb-8 space-y-4 text-lg leading-relaxed">
        <p><%= @post.body %></p>
    </div>

    <!-- Actions -->
    <div class="mb-8 space-x-3 flex inline-flex">
        <%= link_to posts_path, class: "link link-hover link-neutral text-sm flex items-center gap-1" do %>
        <%= icon "arrow-left", library: "heroicons", variant: "solid", class: "size-4 inline" %>
        Back
        <% end %>
        <% if user_signed_in? && current_user == @post.user %>
        <%= link_to edit_post_path(@post), class: "link link-hover link-info text-sm flex items-center gap-1" do %>
        <%= icon "pencil-square", library: "heroicons", variant: "solid", class: "size-4 inline" %>
        Edit
        <% end %>
        <%= link_to @post, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this post?" }, class: "link link-hover link-error text-sm flex items-center gap-1" do %>
        <%= icon "trash", library: "heroicons", variant: "solid", class: "size-4 inline" %>
        Delete
        <% end %>
        <% end %>
    </div>

    <!-- Comments Form -->
    <div class="mb-6">
        <%= render "comments/form" %>
    </div>

    <!-- Reactions / Likes -->
    <div>
        <%= render "posts/reactions", post: @post %>
    </div>
</div>