<article class="w-full h-full bg-white shadow-md rounded-lg p-8 hover:scale-102 transition-transform duration-300">
    <div class="text-center mb-4">
        <h2 class="font-bold text-2xl">
            <%= link_to post.title.capitalize, post_path(post), 
            class: "relative inline-block after:absolute after:left-0 after:bottom-0 after:w-0 after:h-[2px] after:bg-black after:transition-all after:duration-500 hover:after:w-full" %>
        </h2>
        <span class="text-gray-500 text-xs italic">
            <%= post.created_at.strftime("%B %d, %Y") %>
            | Author: <%= post.user.username %> | <%= post.user.email %>
        </span>
    </div>
    <div class="mb-4">
        <% if post.image.attached? %>
        <%= image_tag post.image, 
        class: "w-full h-50 rounded-lg mb-4 object-cover" %>
        <% end %>
    </div>
    <div class="m-0 text-gray-700 text-lg">
        <p><%= truncate(post.body, length: 300) %></p>
    </div>
    <div class="mt-4 gap-2 flex text-center">
        <%= link_to "Read more", post_path(post), 
        class: "p-2 border border-blue-500 text-blue-500 rounded text-xs hover:bg-blue-500 hover:text-white transition-colors duration-300"
        %>
        <% if user_signed_in? && current_user == post.user %>
        <%= link_to "Edit", edit_post_path(post), 
        class: "p-2 border border-green-500 text-green-500 rounded text-xs hover:bg-green-500 hover:text-white transition-colors duration-300 w-[25%]" 
        %>
        <%= link_to "Delete", post_path(post), 
        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, 
        class: "p-2 border border-red-500 text-red-500 rounded text-xs hover:bg-red-500 hover:text-white transition-colors duration-300 w-[25%]" 
        %>
        <% end %>
    </div>
    <div class="mt-4 text-sm text-gray-600">
        ❤️ <%= post.reactions.count %>
        <%= "reaction".pluralize(post.reactions.count) %>
    </div>
</article>