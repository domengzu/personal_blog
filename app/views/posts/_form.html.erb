<%= form_with model: post do |f| %>
<div class="mb-4">
    <%= f.label :title, class: "block text-gray-700 text-sm font-medium" %><br>
    <%= f.text_field :title, 
    class: "w-full px-4 py-2 border border-gray-400 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition" %>
</div>

<div class="mb-4">
    <%= f.label :body, class: "block text-gray-700 text-sm font-medium" %><br>
    <%= f.text_area :body, 
    class: "w-full px-4 py-2 border rounded-lg border-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition" %>
</div>
<div class="mb-4">
    <%= f.label :image, class: "block text-gray-700 text-sm font-medium mb-1" %>
    <%= f.file_field :image,
    class: "w-full px-4 py-2 border border-gray-400 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition" %>
</div>
<div class="flex gap-3 mt-4">
    <%= f.submit "Submit", 
    class: "w-32 text-center px-4 py-2 border border-blue-600 text-blue-800 font-semibold rounded-lg shadow-md hover:bg-blue-700 hover:text-white transition duration-200 cursor-pointer"
    %>

    <%= link_to "Back to posts", posts_path,
    class: "w-40 text-center px-4 py-2 border border-gray-900 text-gray-700 font-semibold rounded-lg shadow-sm hover:bg-gray-300 hover:text-gray-900 transition duration-200 cursor-pointer" %>
</div>
<% end %>