<div class="h-screen overflow-hidden flex items-center justify-center bg-gray-100">
    <div class="w-full max-w-md bg-white shadow-xl rounded-xl p-8">
        <h2 class="text-3xl font-bold text-center text-gray-800 mb-8">
            Welcome Back
        </h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <!-- Email -->
        <div>
            <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition"
        %>
        </div>
        <!-- Password -->
        <div>
            <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.password_field :password,
              autocomplete: "current-password",
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition"
        %>
        </div>
        <!-- Remember Me -->
        <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
            <%= f.check_box :remember_me,
                class: "h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
          %>
            <%= f.label :remember_me,
                class: "ml-2 block text-sm text-gray-600"
          %>
        </div>
        <% end %>
        <!-- Submit Button -->
        <div>
            <%= f.submit "Log in",
              class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2.5 rounded-lg transition duration-200 shadow-md"
        %>
        </div>
        <% end %>
        <!-- Devise Links -->
        <div class="mt-6 text-center text-sm text-gray-600">
            <%= render "devise/shared/links" %>
        </div>
    </div>
</div>