<%= render "shared/toaster" %>

<div class="h-screen overflow-hidden flex items-center justify-center">
    <div class="w-full max-w-md border border-gray-200 shadow-xl rounded-xl p-8">
        <h2 class="text-3xl font-bold text-center mb-8">
            Change your password
        </h2>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
        <%= f.hidden_field :reset_password_token %>

        <div data-controller="password-toggle">
            <p><%= f.label :password, "New password" %></p>
            <% if @minimum_password_length %>
            <p><em>(<%= @minimum_password_length %> characters minimum)</em></p>
            <% end %>
            <div class="relative">
                <p><%= f.password_field :password, data: { password_toggle_target: "input" }, autofocus: true, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition" %></p>
                <button type="button" data-action="click->password-toggle#toggle" class="absolute right-3 top-1/2 -translate-y-1/2 cursor-pointer text-gray-500 hover:text-gray-700">
                    <span data-password-toggle-target="eye">
                        <%= icon "eye", library: "heroicons", class: "size-5" %>
                    </span>
                    <span data-password-toggle-target="eyeSlash" class="hidden">
                        <%= icon "eye-slash", library: "heroicons", class: "size-5" %>
                    </span>
                </button>
            </div>
        </div>

        <div data-controller="password-toggle">
            <p><%= f.label :password_confirmation, "Confirm new password" %></p>
            <div class="relative">
                <p><%= f.password_field :password_confirmation, data: { password_toggle_target: "input" }, autocomplete: "new-password", class: "w-full px-4 py-2 pr-10 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition" %></p>
                <button type="button" data-action="click->password-toggle#toggle" class="absolute right-3 top-1/2 -translate-y-1/2 cursor-pointer text-gray-500 hover:text-gray-700">
                    <span data-password-toggle-target="eye">
                        <%= icon "eye", library: "heroicons", class: "size-5" %>
                    </span>
                    <span data-password-toggle-target="eyeSlash" class="hidden">
                        <%= icon "eye-slash", library: "heroicons", class: "size-5" %>
                    </span>
                </button>
            </div>
        </div>
        <!-- Submit Button -->
        <div>
            <%= f.submit "Change my password",
              class: "w-full btn btn-primary"
        %>
        </div>
        <% end %>
        <!-- Devise Links -->
        <div class="mt-6 text-center text-sm flex gap-4 justify-start">
            <%= render "devise/shared/links" %>
        </div>
    </div>
</div>