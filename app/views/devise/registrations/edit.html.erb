<div class="min-h-screen bg-gray-100 py-2 px-4">
    <div class="max-w-xl mx-auto bg-white shadow-xl rounded-xl p-8">

        <!-- Header -->
        <div class="mb-8 text-center">
            <h2 class="text-3xl font-bold text-gray-800">
                Edit Profile
            </h2>
            <p class="text-sm text-gray-500 mt-2">
                Update your account information
            </p>
        </div>

        <%= form_for(resource, as: resource_name,
        url: registration_path(resource_name),
        html: { method: :put, class: "space-y-6" }) do |f| %>
        <% if resource.errors.any? %>
        <%= render "shared/toaster" %>
        <%#= render "devise/shared/error_messages", resource: resource %>
        <% end %>

        <!-- Username -->
        <div>
            <%= f.label :username, class: "block text-sm font-semibold text-gray-700 mb-1" %>
            <%= f.text_field :username,
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition" %>
        </div>

        <!-- Email -->
        <div>
            <%= f.label :email, class: "block text-sm font-semibold text-gray-700 mb-1" %>
            <%= f.email_field :email,
            autofocus: true,
            autocomplete: "email",
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="text-sm text-yellow-600 bg-yellow-50 border border-yellow-200 rounded-lg p-3">
            Currently waiting confirmation for:
            <strong><%= resource.unconfirmed_email %></strong>
        </div>
        <% end %>

        <!-- New Password -->
        <div>
            <%= f.label :password, class: "block text-sm font-semibold text-gray-700 mb-1" %>
            <p class="text-xs text-gray-500 mb-2">
                Leave blank if you don't want to change it.
            </p>
            <%= f.password_field :password,
            autocomplete: "new-password",
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition" %>

            <% if @minimum_password_length %>
            <p class="text-xs text-gray-400 mt-1">
                Minimum <%= @minimum_password_length %> characters
            </p>
            <% end %>
        </div>

        <!-- Password Confirmation -->
        <div>
            <%= f.label :password_confirmation, class: "block text-sm font-semibold text-gray-700 mb-1" %>
            <%= f.password_field :password_confirmation,
            autocomplete: "new-password",
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition" %>
        </div>

        <!-- Current Password -->
        <div>
            <%= f.label :current_password, class: "block text-sm font-semibold text-gray-700 mb-1" %>
            <p class="text-xs text-gray-500 mb-2">
                We need your current password to confirm your changes.
            </p>
            <%= f.password_field :current_password,
            autocomplete: "current-password",
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition" %>
        </div>

        <!-- Submit Button -->
        <div class="pt-4">
            <%= f.submit "Update Profile",
            class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2.5 rounded-lg shadow-md transition duration-200 cursor-pointer" %>
        </div>

        <% end %>

        <!-- Danger Zone -->
        <div class="mt-10 border-t pt-8">
            <h3 class="text-lg font-semibold text-red-600 mb-3">
                Danger Zone
            </h3>

            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                <p class="text-sm text-gray-600">
                    Unhappy? You can permanently delete your account.
                </p>

                <%= button_to "Cancel my account",
              registration_path(resource_name),
              method: :delete,
              data: { turbo_confirm: "Are you sure? This action cannot be undone." },
              class: "px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-semibold rounded-lg shadow-md transition duration-200" %>
            </div>
        </div>

        <!-- Back Link -->
        <div class="mt-8 text-center">
            <%= link_to "â† Back",
            :back,
            class: "text-sm text-gray-500 hover:text-gray-800 transition duration-200" %>
        </div>

    </div>
</div>